{
    "name": "haskell",
    "dockerComposeFile": "docker-compose.yml",
    "service": "haskell-dev",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "haskell.haskell",
                "phoityne.phoityne-vscode",
                "eriksik2.vscode-ghci",
                "jcanero.hoogle-vscode",
                "github.copilot"
            ],
            "settings": {
                "workbench.colorCustomizations": {
                    "titleBar.activeBackground": "#19549C",
                    "titleBar.activeForeground": "#ffffff",
                    "activityBar.background": "#02A7E3",
                    "activityBar.foreground": "#ffffff"
                },
                "haskell.checkProject": true,
                "haskell.formattingProvider": "ormolu",
                "haskell.indentationRules.enabled": true,
                "haskell.liquidOn": false,
                "haskell.checkParents": "CheckOnSave",
                "haskell.manageHLS": "GHCup",
                "haskell.serverExecutablePath": "/home/dev/.ghcup/bin/haskell-language-server-wrapper",
                "haskell.toolchain": {
                    "ghc": null,
                    "hls": null,
                    "cabal": null,
                    "stack": null
                },
                "haskell.maxCompletions": 40,
                "haskell.openDocumentationInHackage": false,
                "haskell.openSourceInHackage": false,
                "haskell.trace.client": "error",
                "haskell.trace.server": "off",
                "haskell.upgradeGHCup": false,
                "hoogle-vscode.useCabalDependencies": true
            },
            "files.exclude": {
                "**/*.olean": true,
                "**/.DS_Store": true,
                "**/.git": true,
                "**/.hg": true,
                "**/.svn": true,
                "**/CVS": true
            }
        }
    },
    "updateRemoteUserUID": true,
    "remoteUser": "dev",
    "containerEnv": {
        "SHELL": "/bin/bash"
    }
}
